{
  "name": "fastify-microservice-template",
  "version": "3.0.1",
  "description": "A Fastify microservice template",
  "scripts": {
    "lint": "eslint .",
    "lint-fix": "eslint --fix .",
    "lint-md": "remark -f .",
    "lint-docker": "dockerfilelint Dockerfile",
    "start": "node index.js",
    "start-dev": "nodemon -e js index.js",
    "test": "jest",
    "swagger": "node ./src/plugins/swagger/build.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint-fix && npm run lint-md && npm test"
    }
  },
  "remarkConfig": {
    "plugins": [
      "remark-preset-lint-recommended"
    ]
  },
  "keywords": [
    "fastify",
    "microservice"
  ],
  "engines": {
    "node": ">=12.*"
  },
  "author": "DevGurus.io",
  "license": "ISC",
  "dependencies": {
    "@google-cloud/pubsub": "^2.6.0",
    "commercetools-entities-schemas": "^1.0.11",
    "dotenv": "^8.2.0",
    "fastify": "^3.7.0",
    "fastify-autoload": "^3.3.0",
    "fastify-commercetools": "^1.0.5",
    "fastify-env": "^2.1.0",
    "fastify-healthcheck": "^3.0.0",
    "fastify-metrics": "^6.0.2",
    "fastify-oas": "^3.0.3",
    "fastify-plugin": "^3.0.0",
    "isomorphic-fetch": "^3.0.0",
    "pino-pretty": "^4.3.0"
  },
  "devDependencies": {
    "dockerfilelint": "^1.8.0",
    "eslint": "^7.11.0",
    "eslint-config-prettier": "^6.14.0",
    "eslint-plugin-jest": "^24.1.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.3.0",
    "jest": "^26.6.0",
    "jsonlint": "^1.6.3",
    "nodemon": "^2.0.6",
    "prettier-eslint": "^11.0.0",
    "remark-cli": "^9.0.0",
    "remark-preset-lint-recommended": "^5.0.0"
  }
}
