{
  "name": "fastify-microservice-template",
  "version": "3.0.1",
  "description": "A Fastify microservice template",
  "scripts": {
    "lint": "eslint .",
    "lint-fix": "eslint --fix .",
    "lint-md": "remark -f .",
    "lint-docker": "dockerfilelint Dockerfile",
    "start": "node index.js",
    "start-dev": "nodemon -e js index.js",
    "test": "jest",
    "swagger": "node ./src/plugins/swagger/build.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint-fix && npm run lint-md && npm test"
    }
  },
  "keywords": [
    "fastify",
    "microservice"
  ],
  "engines": {
    "node": ">=12.*"
  },
  "author": "DevGurus.io",
  "license": "ISC",
  "dependencies": {
    "@google-cloud/pubsub": "^2.13.0",
    "commercetools-entities-schemas": "^1.1.6",
    "dotenv": "^10.0.0",
    "fastify": "^3.17.0",
    "fastify-autoload": "^3.7.1",
    "fastify-commercetools": "^1.0.5",
    "fastify-env": "^2.1.1",
    "fastify-healthcheck": "^3.0.0",
    "fastify-metrics": "^7.2.1",
    "fastify-oas": "^3.0.3",
    "fastify-plugin": "^3.0.0",
    "pino-pretty": "^5.0.2"
  },
  "devDependencies": {
    "dockerfilelint": "^1.8.0",
    "eslint": "^7.28.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jest": "^24.1.0",
    "eslint-plugin-prettier": "^3.4.0",
    "husky": "^6.0.0",
    "jest": "^26.6.3",
    "nodemon": "^2.0.6",
    "prettier-eslint": "^12.0.0",
    "remark": "^13.0.0",
    "remark-cli": "^9.0.0",
    "remark-lint": "^8.0.0",
    "remark-preset-lint-consistent": "^4.0.0",
    "remark-preset-lint-markdown-style-guide": "^4.0.0",
    "remark-preset-lint-recommended": "^5.0.0"
  }
}
