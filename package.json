{
  "name": "api-categories",
  "version": "1.1.0",
  "description": "API REST Categories microservice",
  "bugs": "https://gitlab.com/devgurus/commercetools-accelerator/development/api/categories/issues",
  "repository": {
    "type": "git",
    "url": "https://gitlab.com/devgurus/commercetools-accelerator/development/api/categories"
  },
  "scripts": {
    "lint": "eslint .",
    "lint-fix": "eslint --fix .",
    "lint-md": "remark -f .",
    "lint-docker": "dockerfilelint Dockerfile",
    "start": "node index.js",
    "start-dev": "nodemon -e js index.js",
    "test": "jest",
    "swagger": "node ./src/plugins/swagger/build.js"
  },
  "remarkConfig": {
    "plugins": [
      "remark-preset-lint-recommended"
    ]
  },
  "keywords": [
    "fastify",
    "microservice",
    "categories"
  ],
  "engines": {
    "node": ">=18.*"
  },
  "author": "DevGurus.io",
  "license": "ISC",
  "imports": {
    "#plugins/*": "./src/plugins/*/index.js",
    "#errors": "./src/errors/index.js",
    "#routes": "./src/api/routes.js"
  },
  "dependencies": {
    "@commercetools/sync-actions": "^4.9.5",
    "commercetools-entities-schemas": "^1.1.25",
    "dotenv": "^16.0.3",
    "fastify": "^4.14.1",
    "fastify-autoload": "^3.13.0",
    "fastify-commercetools": "^1.1.1",
    "@fastify/env": "^4.2.0",
    "fastify-healthcheck": "^4.4.0",
    "fastify-metrics": "^10.0.3",
    "fastify-plugin": "^4.5.0",
    "@fastify/swagger": "^8.3.1",
    "is-ci": "^3.0.1",
    "pino-pretty": "^9.4.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.4.4",
    "@commitlint/config-conventional": "^17.4.4",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "dockerfilelint": "^1.8.0",
    "eslint": "^8.35.0",
    "eslint-config-prettier": "^8.7.0",
    "eslint-plugin-jest": "^27.2.1",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "nodemon": "^2.0.21",
    "prettier-eslint": "^15.0.1",
    "remark": "^14.0.2",
    "remark-cli": "^11.0.0",
    "remark-lint": "^9.1.1",
    "remark-preset-lint-consistent": "^5.1.1",
    "remark-preset-lint-markdown-style-guide": "^5.1.2",
    "remark-preset-lint-recommended": "^6.1.2"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
